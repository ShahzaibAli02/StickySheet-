<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

  <com.agrial.loginapplication.sticksheetdetection.camera.CameraSourcePreview
      android:id="@+id/camera_preview"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <include layout="@layout/camera_preview_overlay"/>

  </com.agrial.loginapplication.sticksheetdetection.camera.CameraSourcePreview>

  <include
      layout="@layout/top_action_bar_in_live_camera"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="top"/>

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/_40sdp"
      android:layout_marginStart="@dimen/_15sdp"
      android:layout_marginEnd="@dimen/_15sdp"
      android:layout_marginBottom="@dimen/_25sdp"
      android:src="@drawable/dotted_rectangle_box"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
